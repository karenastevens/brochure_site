<% provide(:title, "Contact") %>
<h1>Contact Us</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message, url: contact_path) do |f| %>
      <% if @message.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@message.errors.count, "error") %>.
        </div>
        <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <body>
    <div class="container">
      <div class="pull-left">
      <div class="col-md-12" style="margin:8px">
        <contact class="contact">
        <b>Tel:</b>
        <a href="tel:267-343-2365">267-343-2365</a></br>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="tel:215-254-4267">215-254-4267</a></br>
        <br/>
        <b>Email:</b> <a href="mailto:info@playfulmindsacademy.com">info@playfulmindsacademy.com</a>
        <br/>
        <br/>
        <b>Address:</b><br/>
        7800 Ogontz Ave.<br/>
        Philadelphia, PA 19150
        </contact>
      </div>
      </div>
     </div>
     </br>
     <p><em>Leave a message below and we will respond shortly.</em></p></br>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>

      <%= f.label :content, "Message" %>
      <%= f.text_area :content, :rows => "5", class: 'form-control' %>

      <%= f.submit "Send Message", class: "btn btn-primary" %>
    <% end %>
</div>
</div>
</body>
